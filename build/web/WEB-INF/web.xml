<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>billing</servlet-name>
        <servlet-class>main.billing</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addcustomer</servlet-name>
        <servlet-class>main.addcustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>snumber</servlet-name>
        <servlet-class>main.snumber</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>product</servlet-name>
        <servlet-class>main.product</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>placeorder</servlet-name>
        <servlet-class>main.placeorder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>billing</servlet-name>
        <url-pattern>/billing</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addcustomer</servlet-name>
        <url-pattern>/addcustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>snumber</servlet-name>
        <url-pattern>/snumber</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>product</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>placeorder</servlet-name>
        <url-pattern>/placeorder</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
